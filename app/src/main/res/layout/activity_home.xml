<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id = "@+id/my_container"
        android:layout_width="match_parent"
        android:layout_height = "wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"

        >
        <TextView
            android:id = "@+id/my_id_label"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "cjsjizzu"
            android:textSize = "16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/my_name_label"
            />
        <TextView
            android:id = "@+id/my_name_label"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "차지수"
            android:textSize = "30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/my_intro_label"
            />
        <TextView
            android:id = "@+id/my_intro_label"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "시도하고 성장하는 개발자"
            android:textSize = "16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/my_container"

            />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            tools:srcCompat="@tools:sample/avatars"
            app:layout_constraintBottom_toTopOf="@id/my_id_label"
            app:layout_constraintStart_toStartOf="@id/my_container"
            app:layout_constraintEnd_toEndOf="@id/my_container"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>